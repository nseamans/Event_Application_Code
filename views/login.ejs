<hr style= "opacity: .0;">
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <div class="row"> 
        <div class="col">
        <h3 class="text-primary" style="font-family: 'Fredoka One', cursive;">Event. 
            <i class="far fa-calendar-check"></i></h3>
        </div>
      </div>
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block" style="font-family: 'Baloo Bhaijaan', cursive;"> 
        <i class="fas fa-sign-in-alt"></i> Login</button>
      </form>
      <p class="lead mt-4">
       Don't have an account? <a href="/users/register">Register Here</a>
      </p>
    </div>
  </div>
</div>

